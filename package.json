{
    "name": "plotka-theme",
    "displayName": "Plotka Theme",
    "description": "Plotka dark theme made for VSCode with normal dark version and amethyst version.",
    "version": "0.0.1",
    "icon": "/assets/icon.png",
    "engines": {
        "vscode": "^1.47.0"
    },

    "repository": {
        "type": "git",
        "url": "https://github.com/vilopesp/plotka-vscode-theme.git"
    },

    "publisher": "vilopesp",

    "categories": [
        "Themes"
    ],

    "contributes": {
        "themes": [
            {
                "label": "Plotka Amethyst",
                "uiTheme": "vs-dark",
                "path": "./themes/plotka-amethyst.json"
            },
            {
                "label": "Plotka Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/plotka-dark-theme.json"
            }
        ]
    }
}